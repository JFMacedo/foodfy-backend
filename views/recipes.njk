{% extends "layout.njk" %}

{% block content %}
  <div id="page-recipes">
    <div class="recipes">

      {% for recipe in recipes %}
        <div class="recipe">
          <img src="{{ recipe.img }}" alt="{{ recipe.title }}">
          <h3>{{ recipe.title }}</h3>
          <p>por {{ recipe.author }}</p>
        </div><!--recipe-->
      {% endfor %}

    </div><!--recipes-->
  </div><!--page-recipes-->

  {% include "modal.njk" %}
{% endblock %}

{% block scripts %}
  <script src="scripts/scripts.js"></script>
{% endblock %}